<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ModernArtActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/primary_dark_material_dark">

        <RelativeLayout
            android:id="@+id/artFrameRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <View
                android:id="@+id/rec1"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_width="0dip"
                android:layout_height="0dip"
                android:layout_margin="3dip">
            </View>

            <View
                android:id="@+id/rec2"
                android:layout_width="0dip"
                android:layout_height="0dip"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/rec1"
                android:layout_toEndOf="@+id/rec1"
                android:layout_margin="3dip">
            </View>

            <View
                android:id="@+id/rec3"
                android:layout_width="0dip"
                android:layout_height="0dip"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/rec2"
                android:layout_toEndOf="@+id/rec2"
                android:layout_margin="3dip">
            </View>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/artFrameRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/artFrameRow1">

            <View
                android:id="@+id/rec4"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_width="0dip"
                android:layout_height="0dip"
                android:layout_margin="3dip">
            </View>

            <View
                android:id="@+id/rec5"
                android:layout_width="0dip"
                android:layout_height="0dip"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/rec4"
                android:layout_toEndOf="@+id/rec4"
                android:layout_margin="3dip">
            </View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/artFrameRow3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/artFrameRow2">

            <View
                android:id="@+id/rec6"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_width="0dip"
                android:layout_height="0dip"
                android:layout_margin="3dip">
            </View>

            <View
                android:id="@+id/rec7"
                android:layout_width="0dip"
                android:layout_height="0dip"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/rec6"
                android:layout_toEndOf="@+id/rec6"
                android:layout_margin="3dip">
            </View>

            <View
                android:id="@+id/rec8"
                android:layout_width="0dip"
                android:layout_height="0dip"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/rec7"
                android:layout_toEndOf="@+id/rec7"
                android:layout_margin="3dip">
            </View>

            <View
                android:id="@+id/rec9"
                android:layout_width="0dip"
                android:layout_height="0dip"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/rec8"
                android:layout_toEndOf="@+id/rec8"
                android:layout_margin="3dip">
            </View>
        </RelativeLayout>


    </RelativeLayout>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>
